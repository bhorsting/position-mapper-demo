{
  "name": "static-site-boilerplate-ts",
  "version": "1.0.0",
  "description": "simple front-end boilerplate - TypeScript / SCSS / EJS",
  "main": "index.js",
  "author": "sk_rt",
  "license": "MIT",
  "private": false,
  "browserslist": [
    "last 2 versions",
    "ie >= 10",
    "Android >= 4.4",
    "ios_saf >= 8"
  ],
  "scripts": {
    "start": "npm run serve & npm run ejs:watch & npm run cpx:watch",
    "dist": "NODE_ENV=production webpack -p && npm run ejs:prod && npm run cpx:prod",
    "serve": "webpack-dev-server",
    "ejs:build": "ejs-cli --base-dir src/ejs/ \"/**/!(_*).ejs\" --out build/ --options src/ejs/config/meta.json",
    "ejs:watch": "nodemon --watch src/ejs -e ejs -x \"npm run ejs:build \"",
    "ejs:prod": "ejs-cli --base-dir src/ejs/ \"/**/!(_*).ejs\" --out dist/  --options src/ejs/config/meta.json",
    "cpx:watch": "cpx \"src/static/**/!(__*)\" build/ --watch --clean",
    "cpx:prod": "cpx \"src/static/**/!(__*)\" dist/ ",
    "lint:fix": "eslint src/**/*.ts --fix"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "git add"
    ]
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "1.13.0",
    "@typescript-eslint/parser": "^1.13.0",
    "autoprefixer": "^9.6.1",
    "cpx": "^1.5.0",
    "css-loader": "^3.1.0",
    "ejs-cli": "^2.0.1",
    "eslint": "^5.16.0",
    "eslint-config-prettier": "^6.0.0",
    "eslint-loader": "^2.2.1",
    "eslint-plugin-prettier": "^3.1.0",
    "husky": "^3.0.1",
    "lint-staged": "^9.2.0",
    "mini-css-extract-plugin": "^0.8.0",
    "node-sass": "^4.12.0",
    "nodemon": "^1.19.1",
    "postcss": "^7.0.17",
    "postcss-loader": "^3.0.0",
    "prettier": "^1.18.2",
    "sass-loader": "^7.1.0",
    "ts-loader": "^6.0.4",
    "typescript": "^3.5.3",
    "webpack": "^4.37.0",
    "webpack-cli": "^3.3.6",
    "webpack-dev-server": "^3.7.2"
  }
}
