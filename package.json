{
  "name": "static-site-boilerplate-ts",
  "version": "1.0.0",
  "description": "simple front-end boilerplate - TypeScript / SCSS / EJS",
  "main": "index.js",
  "author": "sk_rt",
  "license": "MIT",
  "private": true,
  "browserslist": [
    "last 2 versions",
    "ie >= 10",
    "Android >= 4.4",
    "ios_saf >= 8"
  ],
  "scripts": {
    "start": "npm-run-all -p serve watch:*",
    "dist": "npm-run-all clean-dist dist:*",
    "serve": "webpack serve --mode development",
    "dist:webpack": "NODE_ENV=production webpack --mode production",
    "build:webpack": "webpack",
    "build:ejs": "ejs-cli --base-dir src/ejs/pages/ \"/**/!(_*).ejs\" --out build/ --options src/ejs/env.json",
    "watch:ejs": "nodemon --watch src/ejs/ -e ejs -x \"npm run build:ejs \"",
    "dist:ejs": "ejs-cli --base-dir src/ejs/pages/ \"/**/!(_*).ejs\" --out dist/  --options src/ejs/env.json",
    "dev:cpx": "cpx \"src/static/**/!(__*)\" build/assets/ ",
    "watch:cpx": "npm run dev:cpx --watch",
    "dist:cpx": "cpx \"src/static/**/!(__*)\" dist/assets/ ",
    "lint:fix": "eslint src/**/*.ts --fix",
    "clean-dist": "rimraf dist"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "git add"
    ]
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "4.11.0",
    "@typescript-eslint/parser": "^4.11.0",
    "autoprefixer": "^10.1.0",
    "cpx": "^1.5.0",
    "css-loader": "^5.0.1",
    "ejs-cli": "^2.2.1",
    "eslint": "^7.16.0",
    "eslint-config-prettier": "^7.1.0",
    "eslint-loader": "^3.0.3",
    "eslint-plugin-prettier": "^3.3.0",
    "husky": "^4.3.6",
    "lint-staged": "^10.5.3",
    "mini-css-extract-plugin": "^1.3.3",
    "nodemon": "^2.0.6",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.2.1",
    "postcss-loader": "^4.1.0",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2",
    "sass": "^1.30.0",
    "sass-loader": "^10.1.0",
    "ts-loader": "^8.0.12",
    "typescript": "^4.1.3",
    "webpack": "^5.11.0",
    "webpack-cli": "^4.2.0",
    "webpack-dev-server": "^3.11.0"
  }
}
