{
  "name": "static-site-boilerplate-ts",
  "version": "1.0.0",
  "description": "simple front-end boilerplate - TypeScript / SCSS / EJS",
  "main": "index.js",
  "author": "sk_rt",
  "license": "MIT",
  "private": true,
  "browserslist": [
    "last 2 versions",
    "ie >= 10",
    "Android >= 4.4",
    "ios_saf >= 8"
  ],
  "scripts": {
    "start": "npm-run-all -p serve watch:*",
    "dist": "npm-run-all clean-dist dist:*",
    "serve": "webpack-dev-server",
    "dist:webpack": "NODE_ENV=production webpack -p",
    "build:webpack": "webpack",
    "build:ejs": "ejs-cli --base-dir src/ejs/pages/ \"/**/!(_*).ejs\" --out build/ --options src/ejs/env.json",
    "watch:ejs": "nodemon --watch src/ejs/ -e ejs -x \"npm run build:ejs \"",
    "dist:ejs": "ejs-cli --base-dir src/ejs/pages/ \"/**/!(_*).ejs\" --out dist/  --options src/ejs/env.json",
    "dev:cpx": "cpx \"src/static/**/!(__*)\" build/assets/ ",
    "watch:cpx": "npm run dev:cpx --watch",
    "dist:cpx": "cpx \"src/static/**/!(__*)\" dist/assets/ ",
    "lint:fix": "eslint src/**/*.ts --fix",
    "clean-dist": "rimraf dist"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "git add"
    ]
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "2.12.0",
    "@typescript-eslint/parser": "^2.12.0",
    "autoprefixer": "^9.7.3",
    "cpx": "^1.5.0",
    "css-loader": "^3.4.0",
    "ejs-cli": "^2.1.1",
    "eslint": "^6.7.2",
    "eslint-config-prettier": "^6.7.0",
    "eslint-loader": "^3.0.3",
    "eslint-plugin-prettier": "^3.1.2",
    "husky": "^3.1.0",
    "lint-staged": "^9.5.0",
    "mini-css-extract-plugin": "^0.8.2",
    "node-sass": "^4.13.0",
    "nodemon": "^2.0.2",
    "npm-run-all": "^4.1.5",
    "postcss": "^7.0.25",
    "postcss-loader": "^3.0.0",
    "prettier": "^1.19.1",
    "rimraf": "^3.0.0",
    "sass-loader": "^8.0.0",
    "ts-loader": "^6.2.1",
    "typescript": "^3.7.3",
    "webpack": "^4.41.4",
    "webpack-cli": "^3.3.10",
    "webpack-dev-server": "^3.10.1"
  }
}
