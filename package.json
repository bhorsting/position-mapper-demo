{
  "name": "static-site-boilerplate-ts",
  "version": "1.0.0",
  "description": "simple front-end boilerplate - TypeScript / SCSS / EJS",
  "main": "index.js",
  "author": "sk_rt",
  "license": "MIT",
  "private": false,
  "browserslist": [
    "last 2 versions",
    "ie >= 10",
    "Android >= 4.4",
    "ios_saf >= 8"
  ],
  "scripts": {
    "start": "npm run serve & npm run ejs:watch & npm run cpx:watch",
    "dist": "NODE_ENV=production webpack -p && npm run ejs:prod && npm run cpx:prod",
    "serve": "webpack-dev-server",
    "ejs:build": "ejs-cli --base-dir src/ejs/ '/**/!(_*).ejs' --out build/ --options src/ejs/config/meta.json",
    "ejs:watch": "nodemon --watch src/ejs -e ejs -x \"npm run ejs:build \"",
    "ejs:prod": "ejs-cli --base-dir src/ejs/ '/**/!(_*).ejs' --out dist/  --options src/ejs/config/meta.json",
    "cpx:watch": "cpx 'src/static/**/!(__*)' build/ --watch --clean",
    "cpx:prod": "cpx 'src/static/**/!(__*)' dist/ ",
    "lint:fix": "tslint src/**/*.ts --fix"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "tslint --fix",
      "git add"
    ]
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^1.9.0",
    "autoprefixer": "^9.5.1",
    "cpx": "^1.5.0",
    "css-loader": "^2.1.1",
    "ejs-cli": "^2.0.1",
    "eslint": "^5.16.0",
    "eslint-config-prettier": "^4.2.0",
    "eslint-loader": "^2.1.2",
    "eslint-plugin-prettier": "^3.1.0",
    "husky": "^2.3.0",
    "lint-staged": "^8.1.7",
    "mini-css-extract-plugin": "^0.6.0",
    "node-sass": "^4.12.0",
    "nodemon": "^1.19.0",
    "postcss": "^7.0.16",
    "postcss-loader": "^3.0.0",
    "prettier": "^1.17.1",
    "sass-loader": "^7.1.0",
    "ts-loader": "^6.0.0",
    "typescript": "^3.4.5",
    "webpack": "^4.31.0",
    "webpack-cli": "^3.3.2",
    "webpack-dev-server": "^3.3.1"
  }
}
